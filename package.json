{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "format:prettier": "prettier -w --cache \"./**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "start": "cross-env NODE_ENV=production npm run wrangler",
    "lint:tsc": "tsc --noEmit",
    "lint": "run-s format:** lint:**",
    "prepare": "git config --local core.hooksPath .githooks",
    "wrangler": "wrangler pages dev ./public"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss}": "prettier -w --cache"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.19.3",
    "@remix-run/cloudflare-pages": "^1.19.3",
    "@remix-run/css-bundle": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.13",
    "microcms-js-sdk": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.42.0",
    "eslint-plugin-import-access": "^2.1.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "typescript": "^5.0.4",
    "wrangler": "^3.5.0"
  }
}
